{
  "name": "trick-card-game",
  "version": "1.0.0",
  "description": "A real-time trick card game",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test:backend": "npm test --prefix backend",
    "test:e2e": "npm run test:e2e --prefix e2e",
    "test:e2e:ui": "npm run test:e2e:ui --prefix e2e",
    "generate:build-info": "node scripts/generate-build-info.js",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run generate:build-info && npm run build --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
