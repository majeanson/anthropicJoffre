{
  "name": "trick-card-game",
  "version": "5.0.0",
  "description": "A real-time trick card game",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "db:local": "docker-compose up -d",
    "db:local:stop": "docker-compose down",
    "db:local:logs": "docker-compose logs -f postgres",
    "db:local:reset": "docker-compose down -v && docker-compose up -d",
    "db:verify": "node scripts/verify-local-db.js",
    "db:init": "cd backend && npm run db:init",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:local": "npm run db:local && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test:backend": "npm test --prefix backend",
    "test:e2e": "npm run test:e2e --prefix e2e",
    "test:e2e:ui": "npm run test:e2e:ui --prefix e2e",
    "test:unit": "npm run test:backend",
    "ds": "concurrently --kill-others-on-fail \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run test:wait-and-run\"",
    "test:all:local": "npm run db:verify && npm run test:all",
    "test:wait-and-run": "node scripts/wait-for-servers.js && npm run test:parallel",
    "test:parallel": "concurrently --kill-others-on-fail \"npm run test:backend\" \"npm run test:e2e\"",
    "test:sequential": "node scripts/wait-for-servers.js && npm run test:backend && npm run test:e2e",
    "generate:build-info": "node scripts/generate-build-info.js",
    "sync:buildinfo": "node scripts/sync-buildinfo.js",
    "pre-commit": "node scripts/pre-commit-check.js",
    "pre-commit:quick": "node scripts/pre-commit-check.js --quick",
    "pre-commit:full": "node scripts/pre-commit-check.js --build --tests",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run generate:build-info && npm run sync:buildinfo && npm run build --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "test:suites": "echo '\nðŸ“¦ Test Suites Available:\n  1. test:unit - Backend unit tests (451 tests, ~7s)\n  2. test:integration - E2E integration tests (~10min)\n  3. test:smoke - Quick smoke test (~10s)\n  4. test:load - Production load test (~2min)\n  5. test:marathon - Long-running stability test (60+ min)\n'",
    "test:smoke": "node tests/smoke/full-functionality-test.js",
    "test:smoke:prod": "BACKEND_URL=https://anthropicjoffre-production.up.railway.app node tests/smoke/full-functionality-test.js",
    "test:load": "node tests/load/load-test-advanced.js",
    "test:load:prod": "BACKEND_URL=https://anthropicjoffre-production.up.railway.app NUM_GAMES=10 node tests/load/load-test-advanced.js",
    "test:load:baseline": "NUM_GAMES=10 node tests/load/load-test-advanced.js",
    "test:load:stress": "NUM_GAMES=20 node tests/load/load-test-advanced.js",
    "test:load:heavy": "NUM_GAMES=50 node tests/load/load-test-advanced.js",
    "test:integration": "npm run test:e2e:core --prefix e2e",
    "test:marathon": "npm run test:marathon --prefix e2e",
    "load-test": "node tests/load/load-test.js",
    "load-test:prod": "BACKEND_URL=https://anthropicjoffre-production.up.railway.app node tests/load/load-test.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "socket.io-client": "^4.7.2"
  }
}
